<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/oneComment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20sp"
            android:layout_marginTop="2sp"
            android:text="用户："
            android:textSize="20sp" />

        <TextView
            android:id="@+id/detail_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="75dp"
            android:layout_marginTop="3sp"
            android:text="user123"
            android:textSize="20sp" />

<!--        <per.wsj.library.AndRatingBar-->
<!--            android:id="@+id/star"-->
<!--            android:layout_width="100sp"-->
<!--            android:layout_height="20sp"-->
<!--            android:layout_marginTop="3sp"-->
<!--            android:layout_marginEnd="2dp"-->
<!--            android:layout_toStartOf="@+id/pingfen"-->
<!--            android:rating="2"-->
<!--            app:starColor="#FFE600" />-->

        <TextView
            android:id="@+id/pingfen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/detail_score"
            android:layout_marginTop="2sp"
            android:text="评分："
            android:textSize="20sp" />

        <TextView
            android:id="@+id/detail_score"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3sp"
            android:layout_marginEnd="15dp"
            android:text="5.0"
            android:textSize="20sp" />


    </RelativeLayout>
    <TextView
        android:id="@+id/detail_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/large_text"
        android:textSize="20sp"
        android:layout_margin="8sp"/>
    <ImageView
        android:id="@+id/comment_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/common_google_signin_btn_text_dark"
        android:layout_gravity="center"/>



</LinearLayout>